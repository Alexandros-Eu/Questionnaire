<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_score_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/score_screen">

    <TextView
        android:id="@+id/text_view_score_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/text_view_score_screen_title"
        android:textAllCaps="true"
        android:textColor="#CCCCCC"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_correct_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_score_screen_title"
        tools:text="You answered 9 out of 10 questions correctly!" />

    <TextView
        android:id="@+id/text_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#00FF66"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_correct_answers"
        tools:text="Your score is: 100pts!" />

    <TextView
        android:id="@+id/text_view_participant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/text_view_examinee_title"
        android:textColor="#CCCCCC"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/text_view_correct_answers"
        app:layout_constraintTop_toBottomOf="@+id/text_view_score" />

    <TextView
        android:id="@+id/text_view_participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/text_view_participant_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_participant_title"
        tools:text="Giorgos Georgiou" />

    <TextView
        android:id="@+id/text_view_participant_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/text_view_participant_name"
        app:layout_constraintTop_toBottomOf="@+id/text_view_participant_name"
        tools:text="mscict00000" />

    <TextView
        android:id="@+id/text_view_leaderboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="190dp"
        android:paddingTop="10dp"
        android:text="@string/text_view_leaderboard_title"
        android:textColor="#CCCCCC"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>